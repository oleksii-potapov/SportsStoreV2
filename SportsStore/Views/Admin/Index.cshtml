@model IEnumerable<Product>

@{
    ViewData["Title"] = "All Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered table-responsive-sm">
    <thead class="thead-dark bg-primary text-center">
        <tr>
            <th>Id</th>
            <th style="width: 60%">Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td class="text-center">@product.ProductId</td>
                <td>@product.Name</td>
                <td class="text-right">@product.Price</td>
                <td class="form-inline justify-content-center">
                    <a asp-action="Edit" asp-route-productId="@product.ProductId"
                       class="btn btn-sm btn-warning text-light">Edit</a>
                    <form asp-action="Delete" method="post" style="margin-left: 10px">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Product</a>
</div>